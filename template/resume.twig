<div id="resume" class="content_2">
<!-- .title -->
<h1 class="h-bloc">Résumé - Expérience Personnel</h1>

<div class="row">

<!-- .resume-right -->
<div class="col-md-6">

{% for skills_data in skills %}
<!-- .title_content -->
<div class="title_content" style="float: none;">
    <div class="text_content">{{ skills_data.title }}</div>
    <div class="clear"></div>
</div>
<!-- /.title_content -->

<div class="skills">
    {% for skill in skills_data.list %}
        <!-- .skillbar -->
    <div class="skillbar clearfix" data-percent="{{ skill.percentage }}%">
        <div class="skillbar-title"><span>{{ skill.name }}</span></div>
        <div class="skillbar-bar"></div>
        <div class="skill-bar-percent">{{ skill.percentage }}%</div>
    </div>
        <!-- /.skillbar -->
    {% endfor %}
</div>
{% endfor %}

<!-- .title_content -->
<div class="title_content" style="float: none;">
    <div class="text_content">Mon CV</div>
    <div class="clear"></div>
</div>
<!-- /.title_content -->

<!-- .download_resume -->
<a class="download" style="margin:0;float: left;" href="/media/DUSSERT_Mailys_CV.pdf" target="_blank">
    {% set download_title = 'Télécharger (PDF)' %}
    <span data-hover="{{ download_title }}"><i class="glyphicon glyphicon-download-alt"></i> {{ download_title }}</span>
</a>
<!-- /.download_resume -->

</div>
<!-- /.resume-right -->



<!-- .resume-left -->
<div class="col-md-6 resume-left">
    {% for experience_type, experience_data in experiences %}
    <!-- .title_content -->
    <div class="title_content" style="margin-bottom:5px">
        <div class="text_content">{{ experience_data.title }}</div>
        <div class="clear"></div>
    </div>
    <!-- /.title_content -->

    <!-- .attributes -->
    <ul class="attributes">
        {% for experience in experience_data.list %}
        <li {% if loop.index0 == 0 %}class="first"{% endif %}>
            <h5>{{ experience.name }}
                <span class="duration">
                    <i class="fa fa-calendar color"></i>
                    {{ experience.date_start }} - {{ experience.date_end }}
                </span>
                <br />
                <div class="clearfix"></div>
                <span class="small"><i>{{ experience.short_desc }}</i></span>
            </h5>
            <h6><span class="fa fa-briefcase"></span> {{ experience.business_name }}</h6>
            <p>{{ experience.description|raw }}</p>
        </li>
        {% endfor %}
    </ul>
    <!-- /.attributes -->
    {% endfor %}
    <br>

</div>
<!-- /.resume-left -->
</div>

<div style="clear: both"></div>

<!-- client reference -->
<div class="row">
    <div class="col-md-12">

        <div class="reference clearfix">

            <!-- .title_content -->
            <div class="title_content" style="margin-bottom:5px">
                <div class="text_content">Références</div>
                <div class="clear"></div>
            </div>
            <!-- /.title_content -->
            <ul>
                <li class="clearfix">
                    <img src="/images/people/angelique_melcom_linkedin.jpg" class="img_reference" width="100" height="100" alt="">
                    <p>“Mailys is a pleasure to work with because her pleasant and positive attitude can make nearly any work seem fun and interesting. Mailys has great organizational skills. She is able to successfully complete multiple tasks with favorable results despite deadline pressure.
                        I have enjoyed watching the way she has grown at INSEEC Chicago.”</p>

                    <span class="pull-right">
                        Angelique Melcom Elchibegian, Manager US at CEC- INSEEC
                        <small style="color: #999;"><i> ( linkedin )</i></small>
                    </span>
                </li>
            </ul>
        </div>
    </div>

    <div style="clear: both"></div>
</div>


</div>