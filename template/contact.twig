                    <div class="title_content tiltle_contacts" style="float: none;">
                        <div class="text_content">{{ __('contact_follow_me') }}</div>
                        <div class="clear"></div>
                    </div>

                    <div id="profile_social">
                        {% include 'block/social_button.twig' %}
                    </div>
                </div>

                <div class="col-md-7">
